<form method="post" id="login-form" action="{{ path('app_login') }}">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group">
        <label for="inputUsername">{{ 'username'|trans() }}</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required
               autofocus>
    </div>

    <div class="form-group">
        <label for="inputPassword">{{ 'password'|trans() }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-primary" type="submit">
        {{ 'sign.in'|trans() }}
    </button>
</form>
