<div class="card mt-3 jq-post-card" data-post-id="{{ post.id }}">
    <div class="card-body">
        <h5 class="card-title jq-post-view" data-post-url="{{ path('post_view', {id: post.id}) }}" style="cursor: pointer">
            <span data-toggle="tooltip" data-placement="top" title="{{ 'post.view_details'|trans() }}">
                {{ post.title }}
            </span>
        </h5>

        <p class="card-text">{{ post.content }}</p>

        <p class="card-text"><small class="text-muted">{{ post.createdAt|date('d/m/Y H:i:s') }}</small></p>
    </div>
</div>
