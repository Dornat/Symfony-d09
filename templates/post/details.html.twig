<div class="modal-header">
    <h5 class="modal-title">{{ 'post.details'|trans() }}</h5>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-5">{{ 'form.label.title'|trans() }}: {{ post.title }}</h5>

            <h6>{{ 'form.label.content'|trans() }}:</h6>
            <p class="card-text">{{ post.content }}</p>
        </div>

        <ul class="mt-5 list-group list-group-flush">
            <li class="list-group-item">
                {{ 'post.author'|trans() }}:
                <span><strong>{{ post.author.username }}</strong></span>
            </li>

            <li class="list-group-item">
                {{ 'post.created_at'|trans() }}:
                <small class="text-muted">{{ post.createdAt|date('d/m/Y H:i:s') }}</small>
            </li>

            <li class="list-group-item">
                {{ 'post.updated_at'|trans() }}:
                <small class="text-muted">{{ post.updatedAt|date('d/m/Y H:i:s') }}</small>
            </li>
        </ul>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Save changes</button>
</div>
